{
    "name": "integralservice/behat-context",
    "description": "IntegralService Behat Contexts",
    "keywords": ["Behat", "Symfony2", "Context"],
    "type": "library",
    "homepage": "https://github.com/IntegralService/BehatContext",
    "license": "MIT",
    "minimum-stability": "dev",

    "require": {
        "php": ">=5.6",
        "behat/behat": "^3.5.0",
        "behat/mink-extension": "^2.3.1",
        "behat/symfony2-extension": "^2.1.5",
        "symfony/security": "^3.4|^4.0",
        "symfony/dom-crawler": "^2.4|^3.0|^4.0",
        "symfony/translation": "^3.4|^4.0",
        "symfony/config": "^3.4|^4.0",
        "symfony/dependency-injection": "^3.4|^4.0",
        "phpunit/php-code-coverage": "^5",
        "phpunit/phpunit": "^6"
    },

    "require-dev": {
        "behat/mink-goutte-driver": "^1.1",
        "fabpot/goutte": "^3.2",
        "guzzlehttp/guzzle": "^6.3",
        "behat/mink-selenium2-driver": "^1.3"
    },

    "autoload": {
        "psr-4": {
            "IntegralService\\": "src/"
        }
    },
    
    "config": {
        "bin-dir": "bin/"
    }
}
