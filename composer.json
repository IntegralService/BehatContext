{
    "name": "integralservice/behatcontext",
    "description": "IntegralService Behat Contexts",
    "keywords": ["Behat", "Symfony2", "Context"],
    "type": "library",
    "homepage":    "https://github.com/IntegralService/BehatContext",
    "license":     "MIT",

    "minimum-stability": "dev",

    "require": {
        "php": ">=5.6",
        "behat/behat": "^3.5.0",
        "behat/mink-extension": "^2.3.1",
        "behat/symfony2-extension": "^2.1.5",
        "behat/mink-browserkit-driver": "^1.3.3",
        "behat/mink-selenium2-driver": "^1.3.1",
        "justinrainbow/json-schema": "^5.0",
        "symfony/property-access": "^2.3|^3.0|^4.0",
        "symfony/http-foundation": "^2.3|^3.0|^4.0",
        "symfony/dom-crawler": "^2.4|^3.0|^4.0",
        "behatch/contexts": "^3.2.0",
        "phpunit/php-code-coverage": "^5",
        "phpunit/phpunit": "^6",
        "squizlabs/php_codesniffer": "2.*",
        "escapestudios/symfony2-coding-standard": "~2.0",
        "behat/mink-goutte-driver": "~1.2"
    },

    "autoload": {
        "psr-4": {
            "IntegralService\\": "src/"
        }
    },

    "post-install-cmd": [
        "phpcs --config-set installed_paths vendor/escapestudios/symfony2-coding-standard"
    ]
}
